<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.accepted.AcceptedFragment">

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/acceptedRecyclerView"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_width="411dp" android:layout_height="598dp"
            android:layout_alignParentStart="true" android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="-2dp"
            android:layout_marginLeft="-2dp" android:layout_marginTop="4dp" android:layout_marginBottom="1dp"
            android:layout_centerInParent="true"/>

    <TextView
            android:id="@+id/emptyText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_centerInParent="true" android:gravity="center_horizontal"/>
</RelativeLayout>